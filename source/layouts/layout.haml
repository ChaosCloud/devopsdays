!!! 5
%html
  %head
    %title Middleman
    %meta{:charset => "utf-8"}
    %meta{:content => "Middleman", :name => "description"}
    %meta{:content => "on", "http-equiv" => "cleartype"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    = stylesheet_link_tag 'style.css'
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'

  %body
    = navbar fixed: :top, id: "devopsdays-menu" do
      = navbar_header
      = navbar_collapse do
        = navbar_group class: 'foo', id: 'menu', align: 'right' do
          = navbar_item "Home", '/'
          = navbar_item "CFP", 'http://cfp-devopsdays.herokuapp.com/events/devopsdays-2015'
          = navbar_item "Venue", '/#venue'
          = navbar_item "Get in Touch", '/#contact-us'
    = yield
    = render_partial 'footer'
    = javascript_include_tag "main"
