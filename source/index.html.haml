%section.home-full-screen
  .container
    .row.banner
      .col-md-4.event-logo
        = image_tag "devops.png"
      .col-md-8
        .brand-header
          DevOpsDays India 2015
        .tag-line
          September 12th, 13th | Bangalore
        .submit-talk
          = link_to "Submit a Proposal", "http://cfp-devopsdays.herokuapp.com/events/devopsdays-2015"
        .register
          = link_to "Register", "https://www.townscript.com/devopsdays-2015"

